
<div class="row">

<div class="span4">

<%= simple_form_for(resource, as: resource_name, url:
        session_path(resource_name), html: {class: "well"}) do |f| %>

      <fieldset>
        <legend>Воход</legend>

    <%= f.input :email, placeholder: 'Email', label: "Почта" %>
    <%= f.input :password, label: 'Пароль', placeholder: 'Password'  %>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.input :remember_me, inline_label: 'Запомнить пароль', as: :boolean %></div>
  <% end -%>

  <div><%= f.button :submit, "Войти" %></div>
          </fieldset>

<% end %>

<%= render "devise/shared/links" %>

</div>

  <div class="span8">
       <h2>Signing in is easy and secure</h2>
    </div>
</div>