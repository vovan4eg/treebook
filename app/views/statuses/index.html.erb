<div class="page-header">
  <h1>Все статусы</h1>
</div>

<%= link_to "Добавить новый статус", new_status_path, class: "btn btn-success" %>

<% @statuses.each do |status| %>

    <div class="status">
      <div class="row">
      <div class="span1">
        <%= image_tag status.user.gravatar_url %>
      </div>
      <div class="span7">
      <strong><%= status.user.full_name %></strong>
      <p><%= status.content %></p>

      <div class="meta">
        <%= link_to time_ago_in_words(status.created_at) + " ago", status %>

        <span class="admin">
      | <%= link_to "Редактировать", edit_status_path(status) %> |
          <%= link_to "Удалить", status, method: :delete, data: { confirm: "Удалить статус ?"} %>
    </span>
      </div>
      </div>
        </div>
    </div>
<% end %>